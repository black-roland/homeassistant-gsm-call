{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "^custom_components/.+/manifest\\.json$"
      ],
      "matchStrings": [
        "\"requirements\":\\s*\\[(\\s*\"(?<depName>[^\"]+)(?<currentValue>(==|>=|<=)[0-9\\.]+)\"[,\\s]?)*\\]"
      ],
      "versioningTemplate": "python",
      "depNameTemplate": "{{depName}}",
      "datasourceTemplate": "pypi"
    }
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "pypi"
      ],
      "groupName": "Integration dependency"
    }
  ]
}
